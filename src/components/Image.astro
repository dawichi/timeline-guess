---
interface Props {
	src: string
}

const { src } = Astro.props;
---
<div class="rounded bgimage h-full w-full" style={`background-image: url(${src});`} />

<style>
    .bgimage {
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        height: 100%;
        width: 100%;
        overflow: hidden;
    }
</style>
